{
    "name": "lockdrop-api-server",
    "version": "1.0.0",
    "description": "A simple read-only chain data cache server for the lockdrop",
    "main": "dist/index.js",
    "scripts": {
        "start": "ts-node-dev -r dotenv/config src/app.ts",
        "test": "echo \"Error: no test specified\" && exit 1",
        "fetch:eth-test": "ts-node -r dotenv/config scripts/cacheLockEvents.ts ropsten",
        "fetch:eth-main": "ts-node -r dotenv/config scripts/cacheLockEvents.ts mainnet",
        "fetch:claims": "ts-node -r dotenv/config scripts/cacheClaimEvents.ts",
        "fetch:all": "yarn run fetch:eth-test && yarn run fetch:eth-main && yarn run fetch:claims",
        "node:sandbox": "ts-node -r dotenv/config scripts/sandbox.ts"
    },
    "license": "MIT",
    "devDependencies": {
        "@types/bignumber.js": "^5.0.0",
        "@types/cli-progress": "^3.8.0",
        "@types/express": "^4.17.8",
        "@types/lodash": "^4.14.164",
        "@types/node-fetch": "^2.5.7",
        "dotenv": "^8.2.0",
        "prettier": "^2.1.2",
        "ts-node": "^9.0.0",
        "ts-node-dev": "^1.0.0-pre.63",
        "typescript": "^4.0.5"
    },
    "dependencies": {
        "@plasm/types": "^1.4.0",
        "@polkadot/api": "^2.5.1",
        "@polkadot/util": "^3.7.1",
        "@polkadot/util-crypto": "^3.7.1",
        "bignumber.js": "^9.0.1",
        "cli-progress": "^3.8.2",
        "express": "^4.17.1",
        "lodash": "^4.17.20",
        "moment": "^2.29.1",
        "node-fetch": "^2.6.1",
        "web3": "^1.3.0"
    }
}
